<h1 class="page-title">
  <a href="/"><%= image_tag("home.png", size: "30") %> <span>Funny Movies</span></a>
</h1>
<div id='action-menu' class="menu-actions">
  <% if flash[:alert].present? %>
    <div class="notice alert">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <% if Current.user %>
    <span> Welcome: <%= Current.user.email %></span>
    <%= button_to 'Share video', share_new_path, method: :get %>
    <%= button_to 'Logout', logout_path, method: :delete %>
  <% else %>
    <%= form_with url: log_in_path do |f| %>
      <p>
        <%= f.text_field :email, id: 'email', placeholder: 'Email' %>
      </p>
      <p>
        <%= f.password_field :password, id: 'password', placeholder: 'Password' %>
      </p>
      <p>
        <%= f.submit 'Register/Log In' %>
      </p>
    <% end %>
  <% end %>
</div>
<div class="header-separator"></div>